<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

<ImageView
    android:id="@+id/led_imageview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:contentDescription="@string/app_name"
    android:scaleType="fitXY"
    android:src="@drawable/index3" />

 <TextView
	android:textSize="30sp"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:textColor="#ffffffff"
	android:layout_centerHorizontal="true"
	android:id="@+id/led_text"
	android:layout_marginTop="20dip"	
    android:text="@string/logo"
	/>
<TextView
android:id="@+id/led_position"
android:layout_centerInParent="true"
android:layout_width="50dip"
android:layout_height="50dip"
android:text="@string/position"
/>

<Button
    android:id="@+id/led_myButton1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/led_text"
    android:layout_toRightOf="@+id/button1"
    android:background="@drawable/up_of_btn_background"
    android:text="UP" />

<Button
    android:id="@+id/button2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/led_myButton1"
    android:layout_toRightOf="@+id/led_myButton1"
    android:background="@drawable/btn_background"
    android:text="RIGHT" />

<Button
    android:id="@+id/button1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/led_view1"
    android:layout_alignParentLeft="true"
    android:background="@drawable/left_of_btn_background"
    android:text="LEFT" />

<Button
    android:id="@+id/led_myButton1_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/button2"
    android:layout_alignBottom="@+id/button2"
    android:layout_alignRight="@+id/led_position"
    android:layout_marginRight="16dp"
    android:background="@drawable/mode_of_btn_background" />

<TextView
    android:id="@+id/led_view1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/led_myButton1_1"
    android:layout_below="@+id/led_myButton1_1"
    android:text="@string/led"
    android:textColor="#ffffffff"
    android:textSize="20sp" />

<Button
    android:id="@+id/led_myButton3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/back" />

<ToggleButton
    android:id="@+id/internet"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/led_position"
    android:layout_alignParentRight="true"
    android:layout_marginRight="49dp"
    android:text="ToggleButton" />

<TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/led_myButton1"
    android:layout_alignRight="@+id/internet"
    android:textColor="#ffffffff"
    android:textSize="20sp" />

<TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/led_view1"
    android:layout_toLeftOf="@+id/led_text"
    android:text="TextView"
    android:textColor="#ffffffff"
    android:textSize="25sp" />

</RelativeLayout>